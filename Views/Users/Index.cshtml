
@{
    ViewBag.Title = "Index";
}

<div class="row" style="margin-top:60px">
    <form class="form-signin">
        <h2 class="form-signin-heading">Welcome to Localization Editor.</h2>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Login Name" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>

        <button class="btn btn-lg btn-primary btn-block" type="button" id="loginBtn">Login</button>
    </form>
</div>

@section Scripts{
    <script type="text/javascript">

        $("#loginBtn").click(function () {

            var link00 = '@Url.Action("Login")';
            var dt = {
                Login: $("#inputEmail").val(),
                Password: $("#inputPassword").val()
            };

            $.ajax({
                url: link00,
                type: 'POST',
                data: dt
            }).done(function (result) {
                if (result == "OK")
                    window.location.href = '@Url.Action("Index","Home")';
                else
                    alert('Please verify your user or password!');
            });
        })

    </script>
}


